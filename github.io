<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AGT - Advanced GeneticSynthesis Technology</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Use Inter font -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f7f9fb;
        }

        /* --- Custom Logo Animation Styles --- */
        @keyframes bounce {
            0%, 100% { transform: translateY(0) rotate(45deg); }
            50% { transform: translateY(-12px) rotate(45deg); }
        }
        @keyframes sparkle {
            0%, 100% { text-shadow: 0 0 8px gold, 0 0 15px rgba(255, 215, 0, 0.5); }
            50% { text-shadow: 0 0 4px gold, 0 0 10px rgba(255, 215, 0, 0.8); }
        }
        .logo-diamond {
            background-color: #188ade; 
            width: 45px;
            height: 45px;
            transform: rotate(45deg);
            animation: bounce 3s infinite ease-in-out; 
            border: 4px solid white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            border-radius: 6px;
        }
        .logo-text {
            position: absolute; color: white; font-size: 24px; font-weight: 900; z-index: 10;
            animation: sparkle 2s infinite ease-in-out;
        }
        .input-style {
            padding: 10px; border: 1px solid #ddd; border-radius: 8px; width: 100%;
            box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.06);
        }
        .scroll-container { max-height: 250px; overflow-y: auto; scrollbar-width: thin; }
        .nav-button {
            display: flex; flex-direction: column; align-items: center;
            padding: 8px 0; width: 16.66%; transition: color 0.2s;
        }

        /* --- STYLES IMPORTED FROM saleslandingpage.pdf --- */
        /* Scoped to .sales-page-wrapper to prevent conflicts */
        .sales-page-wrapper {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            line-height: 1.6;
            background-color: #f0f8ff; /* Light Blue/White Background */
            margin: -1rem; /* Fill the parent padding */
            padding: 1rem;
        }
        .sales-page-wrapper .container {
            width: 100%;
            padding: 20px;
            background-color: #ffffff; /* White card background */
            box-shadow: 0 0 25px rgba(0, 50, 100, 0.1);
            border-radius: 12px;
        }
        .sales-page-wrapper header {
            text-align: center; padding: 30px 10px;
            background-color: #007bff; /* Deep Blue Header */
            color: white; border-radius: 10px 10px 0 0;
            margin: -20px -20px 30px -20px; /* Adjust margin to fill top of container */
        }
        .sales-page-wrapper header h1 { font-size: 2em; margin: 0; text-transform: uppercase; }
        .sales-page-wrapper .token-section { margin-bottom: 40px; }
        .sales-page-wrapper h2 {
            font-size: 2em; color: #0056b3; border-bottom: 3px solid #007bff;
            padding-bottom: 10px; margin-bottom: 20px;
        }
        .sales-page-wrapper .token-details-table {
            width: 100%; border-collapse: collapse; margin-bottom: 20px;
        }
        .sales-page-wrapper .token-details-table th, .sales-page-wrapper .token-details-table td {
            border: 1px solid #ddd; padding: 12px; text-align: left;
        }
        .sales-page-wrapper .token-details-table th { background-color: #f2f2f2; }
        .sales-page-wrapper .buy-section {
            background: #e9ecef; padding: 25px; border-radius: 8px;
            border: 1px solid #dee2e6;
        }
        .sales-page-wrapper .form-group { margin-bottom: 15px; }
        .sales-page-wrapper label { display: block; margin-bottom: 5px; font-weight: bold; }
        .sales-page-wrapper input[type="text"], .sales-page-wrapper input[type="email"], .sales-page-wrapper select {
            width: 100%; padding: 10px; border: 1px solid #ccc;
            border-radius: 4px; box-sizing: border-box;
        }
        .sales-page-wrapper .buy-button {
            width: 100%; background-color: #28a745; color: white;
            padding: 15px; border: none; border-radius: 5px;
            cursor: pointer; font-size: 1.2em; font-weight: bold;
        }
        .sales-page-wrapper .payment-details { margin-top: 25px; }
        .sales-page-wrapper footer {
            text-align: center; margin-top: 40px; padding-top: 20px;
            border-top: 1px solid #ddd; font-size: 0.9em; color: #666;
        }
    </style>
</head>
<body class="min-h-screen flex flex-col">

    <!-- Main App Container -->
    <div id="app" class="flex flex-col flex-grow max-w-lg mx-auto w-full bg-white shadow-xl">

        <!-- Header -->
        <header class="p-4 flex justify-between items-center bg-[#188ade] text-white shadow-md sticky top-0 z-20">
            <h1 class="text-2xl font-bold">AGT Platform</h1>
            <div class="relative w-[60px] h-[60px] flex justify-center items-center">
                <div class="logo-diamond"></div>
                <span class="logo-text">AGT</span>
            </div>
        </header>

        <!-- Main Content Area -->
        <main id="content-area" class="flex-grow p-4 overflow-y-auto"></main>

        <!-- Navigation Bar -->
        <nav class="flex justify-around bg-white border-t border-gray-200 shadow-lg sticky bottom-0 z-10">
            <button onclick="navigate('home')" class="nav-button active" data-page="home">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
                <span class="text-xs">Home</span>
            </button>
            <button onclick="navigate('wallet')" class="nav-button" data-page="wallet">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m0 0l2.5-2.5M7 17h10a2 2 0 002-2v-3a2 2 0 00-2-2H9a2 2 0 00-2 2v3a2 2 0 002 2zm10 0v3a2 2 0 01-2 2H9a2 2 0 01-2-2v-3"/></svg>
                <span class="text-xs">Wallet</span>
            </button>
            <button onclick="navigate('purchase')" class="nav-button" data-page="purchase">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
                <span class="text-xs">Purchase</span>
            </button>
            <!-- New Button for Bitcoin AGT Sale -->
            <button onclick="navigate('sales_btagt')" class="nav-button" data-page="sales_btagt">
                 <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-2-9.41V10h-2v4h2v.59c0 .83.67 1.5 1.5 1.5h1c.83 0 1.5-.67 1.5-1.5V14h1v-4h-1v-.59c0-.83-.67-1.5-1.5-1.5h-1c-.83 0-1.5.67-1.5 1.5z"/></svg>
                <span class="text-xs">BTCAGT</span>
            </button>
             <!-- New Button for BitcoinAYT Sale -->
            <button onclick="navigate('sales_btayt')" class="nav-button" data-page="sales_btayt">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1.5 14.5h-3V15h3v1.5zm0-3h-3V12h3v1.5zm0-3h-3V9h3V7.5h-3V6h4.5v10.5H18V6h-3.5v1.5h2V9h-2v1.5h2V12h-2v1.5h2V15h-2v1.5h-1.5z"/></svg>
                <span class="text-xs">AYT Sale</span>
            </button>
            <button onclick="navigate('info')" class="nav-button" data-page="info">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <span class="text-xs">Info</span>
            </button>
        </nav>

        <!-- Message/Modal Container -->
        <div id="message-box" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center p-4 z-50">
            <div class="bg-white p-6 rounded-xl shadow-2xl w-full max-w-xs text-center">
                <p id="message-text" class="text-lg font-semibold mb-4"></p>
                <button onclick="hideMessage()" class="w-full py-2 bg-[#188ade] text-white font-medium rounded-lg hover:bg-blue-600 transition">Close</button>
            </div>
        </div>
    </div>

    <!-- Firebase/JS Logic -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, onSnapshot, setDoc, updateDoc } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        import { setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        setLogLevel('Debug');

        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-agt-app-id';
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : {};
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

        let app, db, auth, userId = null, isAuthReady = false;
        let walletData = { agt_1_balance: 0, agt_2_balance: 0, history: [] };
        let currentPage = 'home';
        
        const WALLET_COLLECTION_PATH = `/artifacts/${appId}/users/`;
        const WALLET_DOC_ID = 'balances';
        const INITIAL_BALANCE_AGT1 = 1000;
        const INITIAL_BALANCE_AGT2 = 0;
        const COIN_1_NAME = 'AGT-1 (World Chain)';
        const COIN_2_NAME = 'AGT-2 (Body Unit)';
        const PAYPAL_LINK = "https://www.paypal.com/paypalme/davidgomadza/500";
        const PAYPAL_EMAIL = "davidgomadza@hotmail.com";

        const initFirebase = async () => {
            try {
                if (!app) {
                    app = initializeApp(firebaseConfig);
                    db = getFirestore(app);
                    auth = getAuth(app);
                }
                await new Promise((resolve) => {
                    const unsubscribe = onAuthStateChanged(auth, async (user) => {
                        if (user) { userId = user.uid; } 
                        else {
                            if (initialAuthToken) { await signInWithCustomToken(auth, initialAuthToken); } 
                            else { await signInAnonymously(auth); }
                            userId = auth.currentUser.uid;
                        }
                        isAuthReady = true;
                        unsubscribe();
                        resolve();
                    });
                });
                console.log(`Firebase Initialized. User ID: ${userId}`);
                startWalletListener();
                navigate(currentPage);
            } catch (error) {
                console.error("Error initializing Firebase:", error);
                showMessage("Authentication Error. Check console.");
            }
        };

        const getWalletRef = () => doc(db, `${WALLET_COLLECTION_PATH}${userId}/agt_wallet/${WALLET_DOC_ID}`);

        const startWalletListener = () => {
            const walletRef = getWalletRef();
            if (!walletRef) return;

            onSnapshot(walletRef, async (docSnap) => {
                if (docSnap.exists()) {
                    const data = docSnap.data();
                    walletData.agt_1_balance = data.agt_1_balance || 0;
                    walletData.agt_2_balance = data.agt_2_balance || 0;
                    walletData.history = data.history && typeof data.history === 'string' ? JSON.parse(data.history) : Array.isArray(data.history) ? data.history : [];
                } else {
                    const initialHistory = [{ type: 'INITIAL', coin: 'AGT-1', amount: INITIAL_BALANCE_AGT1, date: new Date().toISOString() }];
                    const initialData = { agt_1_balance: INITIAL_BALANCE_AGT1, agt_2_balance: INITIAL_BALANCE_AGT2, history: JSON.stringify(initialHistory) };
                    await setDoc(walletRef, initialData);
                    walletData = { ...initialData, history: initialHistory };
                }
                if (currentPage === 'wallet') renderWalletPage();
            }, (error) => console.error("Error listening to wallet changes:", error));
        };

        const performTransaction = async (coinType, transactionType, amount, recipient) => {
            const walletRef = getWalletRef();
            const amountNum = parseFloat(amount);
            if (isNaN(amountNum) || amountNum <= 0) return showMessage("Invalid amount.");

            const isCoin1 = coinType === 'AGT-1';
            const balanceKey = isCoin1 ? 'agt_1_balance' : 'agt_2_balance';
            if (walletData[balanceKey] < amountNum) return showMessage(`Insufficient balance.`);

            const newTx = { id: crypto.randomUUID(), type: transactionType, coin: coinType, amount: -amountNum, recipient: recipient || 'N/A', date: new Date().toISOString() };
            walletData[balanceKey] -= amountNum;
            walletData.history.unshift(newTx);

            try {
                await updateDoc(walletRef, { [balanceKey]: walletData[balanceKey], history: JSON.stringify(walletData.history) });
                showMessage(`Transaction successful.`);
                if (currentPage === 'wallet') renderWalletPage();
            } catch (error) {
                console.error("Transaction failed:", error);
                showMessage("Transaction failed.");
                walletData[balanceKey] += amountNum;
                walletData.history.shift();
            }
        };

        const activateBodyAGT = async () => {
            const walletRef = getWalletRef();
            const activationCost = 100, bodyUnitsGained = 1;
            if (walletData.agt_1_balance < activationCost) return showMessage(`Requires ${activationCost} AGT-1.`);
            
            const tx1 = { id: crypto.randomUUID(), type: 'ACTIVATION_FEE', coin: 'AGT-1', amount: -activationCost, recipient: 'AGT_System', date: new Date().toISOString() };
            const tx2 = { id: crypto.randomUUID(), type: 'ACTIVATION_GAINED', coin: 'AGT-2', amount: bodyUnitsGained, recipient: 'User_System', date: new Date().toISOString() };
            
            walletData.agt_1_balance -= activationCost;
            walletData.agt_2_balance += bodyUnitsGained;
            walletData.history.unshift(tx1, tx2);

            try {
                await updateDoc(walletRef, { agt_1_balance: walletData.agt_1_balance, agt_2_balance: walletData.agt_2_balance, history: JSON.stringify(walletData.history) });
                showMessage(`Activation successful!`);
                renderWalletPage();
            } catch (error) {
                console.error("Activation failed:", error);
                showMessage("Activation failed.");
                walletData.agt_1_balance += activationCost;
                walletData.agt_2_balance -= bodyUnitsGained;
                walletData.history.splice(0, 2);
            }
        };

        const navigate = (page) => {
            currentPage = page;
            const contentArea = document.getElementById('content-area');
            contentArea.innerHTML = '';
            document.querySelectorAll('.nav-button').forEach(btn => {
                btn.classList.toggle('text-[#188ade]', btn.dataset.page === page);
                btn.classList.toggle('font-bold', btn.dataset.page === page);
                btn.classList.toggle('text-gray-500', btn.dataset.page !== page);
            });

            switch (page) {
                case 'wallet': renderWalletPage(); break;
                case 'purchase': renderPurchasePage(); break;
                case 'info': renderInfoPage(); break;
                case 'sales_btagt': renderBtcAgtSalesPage(); break;
                case 'sales_btayt': renderBtcAytSalesPage(); break;
                case 'home': default: renderHomePage();
            }
        };
        
        const renderHomePage = () => {
            document.getElementById('content-area').innerHTML = `
                <div class="space-y-6">
                    <div class="text-center p-6 bg-blue-50 rounded-xl shadow-lg">
                        <h2 class="text-3xl font-extrabold text-[#188ade] mb-2">Advanced GeneticSynthesis Technology</h2>
                        <p class="text-lg text-gray-700">Unlock the power to extend your life from <span class="font-bold text-green-600">1 year to 8000+ years</span>. AGT removes death forever through revolutionary genetic synthesis.</p>
                    </div>
                    <div class="bg-white p-4 border border-gray-200 rounded-xl shadow-md">
                        <h3 class="text-xl font-semibold text-gray-800 mb-3 border-b pb-2">Brief App Description</h3>
                        <p class="text-gray-600 leading-relaxed"><strong>AGT: Unlock eternal life.</strong> Purchase AGT on World Chain, verify your purchase, and activate Advanced GeneticSynthesis Technology for life extension up to 8000+ years. Your journey to immortality begins here.</p>
                    </div>
                    <button onclick="navigate('purchase')" class="w-full py-4 text-white bg-green-500 font-bold text-lg rounded-xl shadow-lg hover:bg-green-600 transition">Purchase AGT-1 Now</button>
                    <p class="text-center text-sm text-gray-500">Your User ID: <span class="font-mono text-gray-700 font-semibold break-all">${userId || 'Loading...'}</span></p>
                </div>`;
        };
        
        const renderInfoPage = () => {
            document.getElementById('content-area').innerHTML = `
                <div class="space-y-6">
                    <h2 class="text-3xl font-bold text-[#188ade] border-b-4 border-[#188ade] pb-2">AGT Technology Overview</h2>
                    <div class="p-4 bg-white rounded-xl shadow-md border border-red-200">
                        <h3 class="text-xl font-semibold text-red-600 mb-2">The Ultimate Promise: Immortality</h3>
                        <p class="text-gray-700">The AGT is designed for life extension of <strong>1 to 8000+ years</strong> by <strong>removing death forever</strong>.</p>
                    </div>
                    <div class="p-4 bg-white rounded-xl shadow-md border">
                        <h3 class="text-xl font-semibold mb-2">How It Works</h3>
                        <p class="text-gray-700">AGT uses genetic reprogramming to repair DNA, maintain telomeres, and eliminate senescent cells, removing death as a biological inevitability.</p>
                    </div>
                    <div class="p-4 bg-white rounded-xl shadow-md border">
                        <h3 class="text-xl font-semibold mb-2">The Two-Coin System</h3>
                        <ul class="list-disc pl-5 text-gray-700">
                            <li><strong>AGT-1 (World Chain):</strong> The publicly traded coin for purchase and transfer.</li>
                            <li><strong>AGT-2 (Body Unit):</strong> The active life-extension unit, activated after proving purchase of AGT-1.</li>
                        </ul>
                    </div>
                </div>`;
        };

        const renderWalletPage = () => {
            const historyItems = walletData.history.map(tx => `
                <div class="flex justify-between items-center p-3 border-b">
                    <div>
                        <span class="text-sm font-semibold ${tx.amount > 0 ? 'text-green-600' : 'text-red-600'}">${tx.amount > 0 ? '+' : ''}${Math.abs(tx.amount).toFixed(2)} ${tx.coin}</span>
                        <span class="text-xs ml-2 py-0.5 px-1 rounded-full ${tx.type === 'ACTIVATION_GAINED' ? 'bg-green-100' : tx.type === 'ACTIVATION_FEE' ? 'bg-red-100' : 'bg-gray-100'}">${tx.type.replace('_', ' ')}</span>
                    </div>
                    <div class="text-right text-xs text-gray-500">${new Date(tx.date).toLocaleDateString()}</div>
                </div>`).join('');

            document.getElementById('content-area').innerHTML = `
                <div class="space-y-6">
                    <h2 class="text-3xl font-bold text-[#188ade] pb-2">Your Wallet</h2>
                    <div class="grid grid-cols-2 gap-3">
                        <div class="bg-gradient-to-r from-[#188ade] to-blue-400 p-4 rounded-xl shadow-lg text-white">
                            <p class="text-sm opacity-80">${COIN_1_NAME}</p><p class="text-3xl font-extrabold mt-1">${walletData.agt_1_balance.toFixed(2)}</p>
                        </div>
                        <div class="bg-gradient-to-r from-green-500 to-green-300 p-4 rounded-xl shadow-lg text-white">
                            <p class="text-sm opacity-80">${COIN_2_NAME}</p><p class="text-3xl font-extrabold mt-1">${walletData.agt_2_balance.toFixed(2)}</p>
                            <p class="text-xs mt-1 opacity-90">${(walletData.agt_2_balance * 8000).toLocaleString()} Max Life Extension</p>
                        </div>
                    </div>
                    <div class="p-4 bg-yellow-50 rounded-xl shadow-md border border-yellow-300 space-y-3">
                        <h3 class="text-lg font-bold text-yellow-800">AGT Body Activation</h3>
                        <p class="text-sm text-yellow-700">Cost: <span class="font-bold">100 AGT-1</span> for 1 AGT-2 unit.</p>
                        <button onclick="activateBodyAGT()" class="w-full py-3 bg-yellow-500 text-white font-bold rounded-lg shadow hover:bg-yellow-600 transition" ${walletData.agt_1_balance < 100 ? 'disabled' : ''}>Activate 1 AGT-2 Unit</button>
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        ${createCoinTransferForm('AGT-1', 'World Chain Address', 'coin1')}
                        ${createCoinTransferForm('AGT-2', 'Body System ID', 'coin2')}
                    </div>
                    <div class="bg-white p-4 rounded-xl shadow-md border"><h3 class="text-xl font-bold mb-3">Transaction History</h3><div class="scroll-container">${historyItems || 'No history.'}</div></div>
                </div>`;
        };

        const createCoinTransferForm = (coin, placeholder, prefix) => `
            <div class="p-4 border rounded-xl shadow-inner space-y-3">
                <h4 class="font-semibold text-lg text-gray-700">${coin} Transfer</h4>
                <input type="number" id="${prefix}-send-amount" placeholder="Amount" class="input-style">
                <input type="text" id="${prefix}-send-recipient" placeholder="${placeholder}" class="input-style">
                <button onclick="performTransaction('${coin}', 'SENT', document.getElementById('${prefix}-send-amount').value, document.getElementById('${prefix}-send-recipient').value)" class="w-full py-2 text-white bg-red-500 font-medium rounded-lg hover:bg-red-600">Send ${coin}</button>
            </div>`;

        const renderPurchasePage = () => {
             document.getElementById('content-area').innerHTML = `
                <div class="space-y-6">
                    <h2 class="text-3xl font-bold text-[#188ade] pb-2">Direct Purchase Offers</h2>
                    <div class="p-4 bg-green-50 rounded-xl shadow-lg border">
                        <h3 class="text-xl font-semibold text-green-800 mb-3">${COIN_1_NAME}</h3>
                        <p class="text-gray-700 mb-4">Acquire the base World Chain Coin to begin your life extension journey.</p>
                        <a href="${PAYPAL_LINK}" target="_blank" class="w-full flex items-center justify-center py-3 bg-blue-500 text-white font-bold rounded-lg shadow hover:bg-blue-600">Purchase via PayPal</a>
                        <p class="text-center text-sm text-gray-500 mt-2">Send inquiries to: <span class="font-mono">${PAYPAL_EMAIL}</span></p>
                    </div>
                    <div class="p-4 bg-yellow-50 rounded-xl shadow-lg border">
                        <h3 class="text-xl font-semibold text-yellow-800 mb-3">${COIN_2_NAME}</h3>
                        <p class="text-gray-700 mb-4">Purchase AGT-2 units directly for immediate life-extension activation.</p>
                        <a href="${PAYPAL_LINK}" target="_blank" class="w-full flex items-center justify-center py-3 bg-blue-500 text-white font-bold rounded-lg shadow hover:bg-blue-600">Purchase via PayPal</a>
                        <p class="text-center text-sm text-gray-500 mt-2">Send inquiries to: <span class="font-mono">${PAYPAL_EMAIL}</span></p>
                    </div>
                </div>`;
